{
  "name": "amplify-client",
  "version": "1.0.1",
  "description": "Desktop client for Amplify - University of Montana's generative AI platform",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --win",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "chat",
    "umontana"
  ],
  "author": "University of Montana",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.umontana.amplify",
    "productName": "Amplify",
    "publish": {
      "provider": "github",
      "owner": "umzcio",
      "repo": "Amplify-Desktop-Client"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
